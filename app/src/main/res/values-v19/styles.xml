        <item name="android:editTextColor">@color/md_text</item>

        <!-- Color del Highlight de los botones -->
        <item name="colorControlHighlight">@color/md_red_500</item>

        <!-- El windowTranslucentStatus no se usa en la 21 dado que oscurecerÃ­a la barra superior -->
